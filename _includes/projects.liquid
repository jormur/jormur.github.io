<div class="col">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if project.img %}
        {%
          include figure.liquid
          loading="eager"
          path=project.img
          sizes="250px"
          alt="project thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">
          {{ project.title }}
          {% if project.title == 'Fractured Power, Fractured Peace? Examining the Reverberations of Partisan Rifts on Political Violence in Mexico' %}
            <span class="badge thesis-badge">Master's Thesis</span>
          {% endif %}
        </h2>
        <p class="card-text">{{ project.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if project.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ project.github }}" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if project.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ project.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}

          {% if project.external_url %}
            <div class="url-icon ml-3">
              <div class="icon" data-toggle="tooltip" title="Project Website">
                <a href="{{ project.external_url }}" target="_blank" rel="noopener noreferrer"><i class="fa-solid fa-link url-icon"></i></a>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
