---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
    {% if page.date %}
    <p class="post-meta">
      <i class="fa-solid fa-calendar fa-sm"></i> Created: {{ page.date | date: '%B %d, %Y' }}
    </p>
    {% endif %}
    {% if page.tags %}
    <p class="post-tags">
      {% for tag in page.tags %}
        <span class="badge bg-secondary"><i class="fa-solid fa-hashtag fa-sm"></i> {{ tag }}</span>
      {% endfor %}
    </p>
    {% endif %}
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>